<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>

<script type="text/javascript">
	var app = angular.module("App", []);

	app.controller("AppCtrl", function($scope, $http){
	  $scope.to_vote_vm = function(vote){
				vote.upcast = function () {
					vote.clear_down_vote()
					vote.upvoted = true;
					vote.upvotes++;
				};
				vote.downcast = function () {
					vote.clear_up_vote()
					vote.downvoted = true;
					vote.downvotes++;
				};
				vote.clear_up_vote =function(){
					if(!vote.upvoted) return;
					
					vote.upvotes--;
					vote.upvoted = false;
				};
				vote.clear_down_vote =function(){
					if(!vote.downvoted) return;
					
					vote.downvotes--;
					vote.downvoted = false;
				};
			};

	  data = {
	  	flexevent: {
	  		address: "1234 main st",
	  		created_at: "2013-04-01T06:10:54Z",
	  		event_time: "2000-01-01T06:10:00Z",
	  		id: 1,
	  		location: "Improving Enterprises",
	  		name: "April Hack Club",
	  		updated_at: "2013-04-01T06:10:54Z",
	  		voting_cutoff: "2013-04-01T06:10:00Z"
	  	},
	  	votes: [
		  	{
		  		voter_id: '28a66b92-768c-43c2-be11-9b301fe87ef8',
		  		upvotes: 8,
		  		downvotes: 3,
		  		upvoted: false,
		  		downvoted: false,
		  		created_at: "2013-04-09T00:39:27Z",
		  		event_date: "2013-04-01",
		  		event_id: 1,
		  		id: 1,
		  		updated_at: "2013-04-09T00:39:27Z"
		  	},
		  	{
		  		voter_id: '28a66b92-768c-43c2-be11-9b301fe87ef8',
		  		upvotes: 4,
		  		downvotes: 8,
		  		upvoted: false,
		  		downvoted: false,
		  		created_at: "2013-04-09T00:39:47Z",
		  		event_date: "2013-04-02",
		  		event_id: 1,
		  		id: 2,
		  		updated_at: "2013-04-09T00:39:47Z"
		  	}
	  	]
	  };

	  $scope.flexevent = data.flexevent;
	  $scope.flexevent.votes = data.votes;
		_.each($scope.flexevent.votes,$scope.to_vote_vm);
	});
</script>

<div id="main" ng-app="App" ng-controller="AppCtrl">
	<div class="row span12">
		<h3>{{flexevent.name}}</h3>
		<ul>
			<li>Location: {{flexevent.location}}</li>
			<li>Address: {{flexevent.address}}</li>
			<li>Voting Cutoff: {{flexevent.event_time | date:'MMMM d yyyy h:mm a'}}</li>
			<li>Event Time: {{flexevent.voting_cutoff | date:'h:mm a'}}</li>
		</ul>
	</div>
	<div class="row span12">
		<h3>Voting Options</h3>
		<div class="votes row span12" ng-repeat="vote in flexevent.votes">
			<h4>{{vote.event_date | date:'MMMM d yyyy'}}</h4	>
				<div class="row">
					<div class="span2">
						up votes:
					</div>
					<div class="span1">
						{{vote.upvotes}}
					</div>
					<div class="span2">
						<p>
							<button class="btn btn-primary btn-block" ng-disabled="vote.upvoted" ng-click="vote.upcast()">
								up vote
							</button>
						</p>
					</div>
				</div>
				<div class="row">
					<div class="span2">
						down votes: 
					</div>
					<div class="span1">
						{{vote.downvotes}} 
					</div>
					<div class="span2">
						<button class="btn btn-primary btn-block" ng-disabled="vote.downvoted" ng-click="vote.downcast()">
							down vote
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>